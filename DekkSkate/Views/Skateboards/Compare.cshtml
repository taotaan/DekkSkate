@model IEnumerable<DekkSkate.Skateboards>

@{
    ViewBag.Title = "Compare Skateboards";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center; color: orange;">เปรียบเทียบ สเก็ตบอร์ด รุ่นต่างๆ</h2>

<!-- Form to select skateboards -->
<form method="get" action="/Skateboards/Compare" style="text-align: center; margin-bottom: 30px;">
    <div style="display: inline-block; margin-right: 20px;">
        <select id="firstId" name="firstId">
            <option value="">- Select -</option>
            @foreach (var skateboards in (IEnumerable<Skateboards>)ViewBag.Skateboards)
            {
                <option value="@skateboards.SkateboardID">@skateboards.Brand - @skateboards.Model</option>
            }
        </select>
    </div>
    <div style="display: inline-block;">
        <select id="secondId" name="secondId">
            <option value="">- Select -</option>
            @foreach (var skateboards in (IEnumerable<Skateboards>)ViewBag.Skateboards)
            {
                <option value="@skateboards.SkateboardID">@skateboards.Brand - @skateboards.Model</option>
            }
        </select>
    </div>
    <button type="submit" style="margin-left: 20px;">Compare</button>
</form>

@if (Model != null && Model.Count() >= 2)
{
    <div style="display: flex; justify-content: space-around; align-items: flex-start; margin-top: 20px;">
        <!-- First Skateboard -->
        <div style="text-align: center; width: 45%; border: 1px solid #ddd; border-radius: 10px; padding: 20px;">
            <h3>@Model.ElementAtOrDefault(0).Brand @Model.ElementAtOrDefault(0).Model</h3>
            <img src="~/Content/images/@Model.ElementAtOrDefault(0).url" alt="First Skateboard" style="max-width: 100%; height: auto; border-radius: 10px;" />
            <ul style="list-style: none; padding: 0; text-align: left;">
                <li><strong>Brand:</strong> @Model.ElementAtOrDefault(0).Brand</li>
                <li><strong>Category:</strong> @Model.ElementAtOrDefault(0).Category</li>
                <li><strong>Price:</strong> @Model.ElementAtOrDefault(0).Price</li>
                <li><strong>Rating:</strong> @Model.ElementAtOrDefault(0).rating</li>
                <li><strong>Suggest:</strong> @Model.ElementAtOrDefault(0).suggest</li>
            </ul>
        </div>

        <!-- Second Skateboard -->
        <div style="text-align: center; width: 45%; border: 1px solid #ddd; border-radius: 10px; padding: 20px;">
            <h3>@Model.ElementAtOrDefault(1).Brand @Model.ElementAtOrDefault(1).Model</h3>
            <img src="~/Content/images/@Model.ElementAtOrDefault(1).url" alt="Second Skateboard" style="max-width: 100%; height: auto; border-radius: 10px;" />
            <ul style="list-style: none; padding: 0; text-align: left;">
                <li><strong>Brand:</strong> @Model.ElementAtOrDefault(1).Brand</li>
                <li><strong>Category:</strong> @Model.ElementAtOrDefault(1).Category</li>
                <li><strong>Price:</strong> @Model.ElementAtOrDefault(1).Price</li>
                <li><strong>Rating:</strong> @Model.ElementAtOrDefault(1).rating</li>
                <li><strong>Suggest:</strong> @Model.ElementAtOrDefault(1).suggest</li>
            </ul>
        </div>
    </div>
}
else
{
    <p style="text-align: center;">Please select two skateboards to compare.</p>
}

<style>
    body {
        font-family: Arial, sans-serif;
    }

    h2 {
        margin-top: 20px;
    }

    button {
        padding: 10px 20px;
        background-color: orange;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        button:hover {
            background-color: darkorange;
        }

    select {
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 40px;
    }
</style>
